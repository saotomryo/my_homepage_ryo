---
interface Props {
  locale: 'ja' | 'en';
  name: string;
  headline: string;
  summary: string;
}

const { locale, name, headline, summary } = Astro.props;
const text = {
  ja: {
    badge: 'Personal Hub',
    cta1: '活動を見る',
    cta2: '仕事を依頼する'
  },
  en: {
    badge: 'Personal Hub',
    cta1: 'View Activities',
    cta2: 'Hire Me'
  }
};

const t = text[locale];
const basePath = Astro.site ? new URL(Astro.site).pathname.replace(/\/$/, '') : '';

function withBase(inputPath: string) {
  if (!inputPath.startsWith('/')) return inputPath;
  return `${basePath}${inputPath}`;
}
---

<section class="hero">
  <p class="badge">{t.badge}</p>
  <h1>{name}</h1>
  <p class="headline">{headline}</p>
  <p class="summary">{summary}</p>
  <div class="hero-actions">
    <a href={withBase(`/${locale}/activities`)}>{t.cta1}</a>
    <a href={withBase(`/${locale}/links`)}>{t.cta2}</a>
  </div>
</section>
