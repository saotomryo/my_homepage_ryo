---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import SectionCard from '../../components/SectionCard.astro';
import LatestVideo from '../../components/LatestVideo.astro';
import profile from '../../content/generated/ja/profile.json';
import siteMeta from '../../content/generated/ja/site-meta.json';
import media from '../../content/generated/ja/media.json';

const cards = [
  { title: '記事', description: 'Qiita / Zenn / note の記事をまとめて読めます。', href: '/ja/activities' },
  { title: '動画', description: 'YouTube チャンネルとプレイリストを見られます。', href: '/ja/links' },
  { title: '開発コード', description: '開発プロジェクトやリポジトリを見られます。', href: '/ja/activities' },
  { title: '仕事依頼', description: '国内外の受託窓口を案内します。', href: '/ja/links' }
];
---

<BaseLayout locale="ja" title="Ryo Saotome | トップ" path="/ja">
  <Hero locale="ja" name={profile.name} headline={profile.headline} summary={profile.summary} />

  <section class="stats">
    <p>記事: {siteMeta.counts.articles}</p>
    <p>プロジェクト: {siteMeta.counts.projects}</p>
    <p>更新: {siteMeta.updated_at}</p>
  </section>

  <section class="card-grid">
    {cards.map((card) => <SectionCard {...card} />)}
  </section>

  <LatestVideo locale="ja" video={media.latest_video} videos={media.videos} playlistKuroneko={media.playlist_kuroneko} channelUrl={media.youtube_channel_url} />
</BaseLayout>
